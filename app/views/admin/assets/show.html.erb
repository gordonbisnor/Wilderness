<%= header(@klass) %>


<table id='<%= @klass.to_s.downcase %>_<%= @item.id %>' class='show'>
<% unless @item.title.blank? %>
   <tr>
		 <td>Title</td>
		 <td><%= @item.title %></td>
   </tr>
<% end %>
<tr>
	<td>File</td>
	<td><%= @item.public_filename %></td>
    </tr>
<tr>
	<td>Content Type</td>
	<td><%= @item.content_type %></td>
	  </tr> 
	
		<tr>
			<td>File Size</td>
			<td><%= @item.size %></td>
	 </tr>
	<tr>
			<td>Dimensions</td>
			<td><%= @item.dimensions %></td>
		</tr>
	
	<tr>
		<td>File</td>
		<td>
	<% if @item.content_type.split('/')[0] == 'image' %>
		<%= image_tag(@item.public_filename, :class => 'image') %>
	<% elsif ['application/octet-stream','video/mp4'].include?(@item.content_type) %>
		<%= video_player(@item) %>
		<br />Embed Code:                      
		<textarea rows='10' cols='70'><%=h video_player(@item) %></textarea>
	<% elsif @item.content_type.split('/')[0] == 'audio' %>
		<% if @item.content_type.split('/')[1] == 'x-m4a' %>
			<%= link_to 'Download', @item.public_filename %>
		<% else %>
			<%= audio_player(@item) %>
			<br />Embed Code:                      
			<textarea rows='10' cols='70'><%=h audio_player(@item) %></textarea>
		<% end %>
	<% else %>
		<%= link_to 'Download', @item.public_filename %>
	<% end %>
        </td>
</tr>
<tr>
	<td>Edit</td>
	<td><%= link_to image_tag('wilderness/icons/pencil.png'), edit_admin_asset_path(@item) %></th>
	</tr>
<tr>
	<td>Delete</td>
	<td><%= link_to image_tag('wilderness/icons/delete.png'), [:admin,@item], :method => :delete, :confirm => 'Are you sure' %></td>                              
    </tr>
</table>
