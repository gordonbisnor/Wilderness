<%= header(@klass) %>

<%= link_to 'Â« Back To Table View', '?view=table' %>

<% unless @items.blank? %>
<ul id='items' class='sortable-list'>
	<% @items.each do |item| %>
		<li id='item_<%= item.id %>'>
			<% if item.attributes.include?("title") %>
				<%= item.title -%>
			<% elsif item.attributes.include?("name") %>
				<%= item.name %>
			<% else %>
			<!-- THIS IS SOOOOOO NASTY - AH WE NEED TO BE ABLE TO SPEC A FIELD TO BE USED FOR MODELS -->
			<%=h item.inspect.to_s %>
			<% end %>
		</li>
	<% end %>
</ul>
<% else %>
	<div id='nothing-found'>No Items Found</div>
<% end %>

<%= will_paginate @items %>

<%= sortable_element :items, :url => { :action => 'sort' } %>
